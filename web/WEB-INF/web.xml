<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>HomePageServlet</servlet-name>
        <servlet-class>com.webapp.servlet.HomePageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NavigateServlet</servlet-name>
        <servlet-class>com.webapp.servlet.NavigateServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SuggestionServlet</servlet-name>
        <servlet-class>com.webapp.servlet.SuggestionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetProductByTypeServlet</servlet-name>
        <servlet-class>com.webapp.servlet.GetProductByTypeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomePageServlet</servlet-name>
        <url-pattern>/HomePageServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NavigateServlet</servlet-name>
        <url-pattern>/NavigateServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SuggestionServlet</servlet-name>
        <url-pattern>/SuggestionServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetProductByTypeServlet</servlet-name>
        <url-pattern>/GetProductByTypeServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
